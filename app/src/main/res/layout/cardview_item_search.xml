<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_idss"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgv_food"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#2d2d2d"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_Name"
                        android:layout_weight="9"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="Canh bún dì ba"
                        android:textColor="#2d2d2d"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/score"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textAlignment="viewEnd"
                        android:text="6.3"
                        android:textColor="#4CAD50"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_weight="9"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="Chợ Bùi đức lộ, quốc lộ,.... 1"
                        android:textColor="#ACABAB"
                        android:textSize="10dp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/distance"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:paddingTop="5dp"
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd"
                        android:paddingRight="5dp"
                        android:text="4.7km"
                        android:textColor="#ACABAB"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_typeStore"
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="Quán ăn"
                        android:textColor="#2d2d2d"
                        android:textSize="13dp"
                        android:textStyle="bold" />
                    <TextView
                        android:drawableLeft="@drawable/comment"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:textSize="15dp"
                        android:id="@+id/photo"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:text="18"
                        android:textColor="#ACABAB"

                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/comment"
                        android:layout_weight="1"
                        android:layout_width="60dp"
                        android:drawableLeft="@drawable/photography"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:textSize="15dp"
                        android:layout_height="match_parent"
                        android:text="34"
                        android:textColor="#ACABAB"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"

                        android:src="@drawable/foody"
                        />
                    <TextView
                        android:id="@+id/coupon"
                        android:layout_weight="9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:text="Mã k...n mãi"
                        android:textColor="#2d2d2d"
                        android:textSize="13dp"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>